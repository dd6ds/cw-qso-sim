# cw-qso-sim — example configuration file
# Copy to ~/.config/cw-qso-sim/config.toml and adjust to taste.

[general]
# Your callsign — shown in the TUI header and sent during QSOs
mycall     = "DD6DS"
# who starts the QSO: "sim" (simulator sends CQ) | "me" (you send CQ)
who_starts = "sim"
# UI language: "en" | "de" | "fr" | "it"
language   = "en"

[morse]
# Simulator TX speed (WPM) — how fast the simulated station sends
sim_wpm    = 25
# Your keying / decoder speed (WPM) — char-gap timing used to decode your paddle
user_wpm   = 18
# Farnsworth effective WPM (0 = disabled).
# When set, characters are sent at user_wpm speed but gaps are stretched to
# farnsworth_wpm, giving you more time to read between characters.
farnsworth_wpm = 0
# Sidetone frequency in Hz
tone_hz    = 620
# Audio volume 0.0 – 1.0
volume     = 0.7
# true = play sidetone while you key
sidetone   = true

[keyer]
# Adapter type:
#   "auto"         — auto-detect hardware, fall back to keyboard if none found
#   "vband"        — VBand USB HID paddle (Linux/macOS)
#   "attiny85"     — ATtiny85 Digispark MIDI paddle
#   "arduino_nano" — Arduino Nano serial-MIDI paddle (31250 baud)
#   "arduino_uno"  — Arduino Uno serial-MIDI paddle (31250 baud)
#   "esp32"        — ESP32 DevKit serial-MIDI paddle (115200 baud) — also set port below
#   "esp8266"      — ESP8266 NodeMCU / Wemos D1 Mini (115200 baud) — also set port below
#   "winkeyer"     — K1EL WinKeyer USB/Serial (WK2/WK3) — also set port below
#   "keyboard"     — type callsigns on the keyboard (no physical paddle needed)
adapter    = "auto"
# Paddle mode: "iambic_a" | "iambic_b" | "straight"
mode       = "iambic_a"
# Serial port for Arduino Nano/Uno, ESP32, ESP8266 or WinKeyer adapters.
# Linux:   /dev/ttyUSB0  or  /dev/ttyACM0
# macOS:   /dev/cu.usbserial-*
# Windows: COM3  (check Device Manager)
# port     = "/dev/ttyUSB0"

[qso]
# QSO style (snake_case in this file; CLI --style uses kebab-case, e.g. --style cwt-contest):
#   "ragchew"         — relaxed rag-chew with name, QTH, rig, WX chat
#   "contest"         — short RST + serial exchange
#   "dx_pileup"       — rapid pile-up practice
#   "darc_cw_contest" — DARC CW contest: RST + DOK exchange
#   "mwc_contest"     — MWC sprint: RST + serial exchange
#   "cwt_contest"     — CWT sprint: name + member-nr (or state/country) exchange
#   "random"          — pick a style at random each QSO
style        = "ragchew"
# Simulated operator reaction delay range (milliseconds)
min_delay_ms = 800
max_delay_ms = 2500
# Probability of a simulated typo (0.0 – 1.0, e.g. 0.05 = 5%)
typo_rate    = 0.05

# ── CWT contest settings (only used when style = "cwt_contest") ───────────────
# Your operator name sent in the CWT exchange (e.g. your first name or handle)
# cwt_name = "OP"
# Your CWT member number (4 digits) OR state/country if not a member (e.g. "DL", "CA")
# cwt_nr   = "NM"
